{
  "name": "vscode-ai-summary",
  "displayName": "AI Summary",
  "description": "Continuously summarizes the code you are reading in the sidebar.",
  "version": "0.0.3",
  "publisher": "local-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/<owner>/<repo>.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "main": "./extension/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Summary",
      "properties": {
        "aiSummary.groqApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional. Groq API key. Prefer using the command 'AI Summary: Register Groq API Key' to store it securely in Secret Storage. You can also set the `GROQ_API_KEY` environment variable.",
          "scope": "application"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "aiSummaryView",
          "name": "Summary",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "aiSummary.registerGroqApiKey",
        "title": "AI Summary: Register Groq API Key"
      },
      {
        "command": "aiSummary.copy",
        "title": "AI Summary: Copy Summary to Clipboard"
      }
    ]
  },
  "files": [
    "extension/**/*",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "bundle": "webpack --mode production"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "@types/vscode": "1.95.0",
    "typescript": "5.4.5",
    "@vscode/vsce": "3.6.0",
    "webpack": "5.90.0",
    "webpack-cli": "5.1.4",
    "ts-loader": "9.5.1"
  },
  "dependencies": {
    "@ai-sdk/groq": "2.0.5",
    "ai": "5.0.10"
  }
}
